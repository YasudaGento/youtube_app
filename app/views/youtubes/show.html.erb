<div class="center">
  <div class="movie">
    <iframe width="600" height="400" src="https://www.youtube.com/embed/<%= @video_id  %>?showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  </div>
  <div class="favorite">
    <% if Favorite.find_by(user_id: current_user.id, video_id: params[:video]) %>
    <%= link_to("Delete","/favorites/#{params[:video]}/destroy",{method: "post"})%>
    <% else %>
    <%= link_to("Favorite","/favorites/#{params[:video]}/create",{method: "post"})%>
    <% end %>
  </div>
    
   <div class="posts">
    <%= render 'microposts/micropost_form' %>
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
   </div>
</div>